  /etc/neutron/** r,
  /etc/udev/udev.conf r,
  /var/lib/neutron/** rwk,
  /var/log/neutron/** rwk,
  /{,var/}run/neutron/** rwk,
  /{,var/}run/lock/neutron/** rwk,
  /run/udev/* r,
  /sys/kernel/uevent_seqnum r,

  # Allow unconfined sudo to support oslo.rootwrap
